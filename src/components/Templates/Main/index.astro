---
import FormatLib from '@/libs/formatLib';

const { pathname } = Astro.url;
const { cn } = FormatLib;
const paths = pathname.split('/');
const isLabPost = !!(paths[1] === 'lab' && paths[2]);
---

<main
  class={cn(
    isLabPost ? 'w-full' : 'max-w-[992px] px-[30px]',
    'mx-auto mt-10 w-full flex-1',
  )}
>
  <slot />
</main>
